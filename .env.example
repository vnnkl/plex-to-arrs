# Copy this file to .env and update with your actual values

# Plex Configuration
PLEX_TOKEN=your_plex_token_here

# Radarr Configuration (Movies)
RADARR_URL=http://your-radarr-server:7878/api/v3
RADARR_API_KEY=your_radarr_api_key
RADARR_QUALITY_PROFILE=4

# Sonarr Configuration (TV Shows)
SONARR_URL=http://your-sonarr-server:8989/api/v3
SONARR_API_KEY=your_sonarr_api_key
SONARR_QUALITY_PROFILE=4

# TMDB Configuration
TMDB_API_KEY=your_tmdb_api_key

# Optional Settings
RUN_ON_STARTUP=false
CACHE_REFRESH_HOURS=24
TZ=Europe/Amsterdam

# Quality Profile Options:
# RADARR QUALITY PROFILES (Movies):
# 1=Any, 2=SD, 3=HD-720p, 4=HD-1080p, 5=Ultra-HD, 6=HD-720p/1080p,
# 7=UHD Bluray+WEB, 8=HD Bluray+WEB, 9=Remux+WEB 1080p, 10=UHD+HD

# SONARR QUALITY PROFILES (TV Shows):
# 1=Any, 2=SD, 3=HD-720p, 4=HD-1080p, 5=Ultra-HD, 6=HD-720p/1080p,
# 7=WEB-2160p, 8=WEB-2160p+1080p, 9=WEB-1080p

# Example configurations:
# For high quality: RADARR_QUALITY_PROFILE=9 (Remux + WEB 1080p)
# For 4K content: RADARR_QUALITY_PROFILE=5 (Ultra-HD)
# For space saving: RADARR_QUALITY_PROFILE=3 (HD-720p)
